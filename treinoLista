    <script>
function mostrar() {

    var textoDigitado = document.getElementById("texto").value;
    var numeroDigitado = document.getElementById("numero").value;

    var itensLista = `${textoDigitado}, ${numeroDigitado}`
    
    let lista = document.createElement("li");

    document.getElementById("lista").appendChild(lista) = itensLista;


}

