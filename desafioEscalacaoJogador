    <div> 
        <h2>Insira o nome do jogador:</h4>
<input type="text" placeholder="Nome do jogador" id="nomeJogador">


<h3>Insira a posição do jogador:</h3>
<input type="text" placeholder="Posição do jogador" id="posicaoJogador">


<h3>Numero da camisa do jogador:</h3>
<input type="number" placeholder="Numero da camisa" id="numeroCamisa">

    </div>
    <div>
    <button onclick="escalar()">ESCALAR</button>
    </div>

    <ul id="escalacao">
      
    </ul>
    <div>

        <h3>Remover Jogador</h1>
            <input type="number" id="jogadorRemovido">
            <button onclick="removerJogador()">REMOVER</button>
    </div>

    <script> 
    function escalar() { 


let nome = document.getElementById("nomeJogador").value;                            // transforma o que foi digitado em um valor pra variavel
let posicao = document.getElementById("posicaoJogador").value;                       // transforma o que foi digitado em um valor pra variavel
let camisa = Number(document.getElementById("numeroCamisa").value);               // transforma o que foi digitado em um NUMERO pra variavel

let confirmarJogador = window.confirm("Deseja escalar esse jogador?") 

if (confirmarJogador) {
    let li = document.createElement("li");                                                   //Cria a lista para inserir mais de um jogador (tive que pesquisar no gpt como fazer isso pois eu só sabia inserir se tivesse um <p id="algo"> ja feito)
                                    
document.getElementById("escalacao").appendChild(li);    

li.innerText = `${nome}, ${posicao}, ${camisa}` 





        document.getElementById("nomeJogador").value = "";
        document.getElementById("posicaoJogador").value = "";
        document.getElementById("numeroCamisa").value = "";


        
}




}
    </script>
