<body>
    
    <h1> Digite um número

        

        <input type="number" id="numeroDigitado"> 
        <button onclick="calcular()">Me informe</button>

            <h3 id="mensagem"></h3>

            <script>
            function calcular() {

    let numero = Number(document.getElementById("numeroDigitado").value);

    if (numero > 1000) {
        
    (document.getElementById("mensagem").innerText="O número é maior que mil")
        return;


     } if (numero < 1000) {  
     
     (document.getElementById("mensagem").innerText="O número é menor que mil")
    return;

     } else if (numero===1000) {
        (document.getElementById("mensagem").innerText="O número é mil")
     return;
    }

     }

             </script>
